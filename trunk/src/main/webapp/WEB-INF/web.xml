<?xml version="1.0" encoding="utf-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>edukapp</display-name>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            index.jsp
        </welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>
            404
        </error-code>
        <location>
            /errors/404.jsp
        </location>
    </error-page>
	
	<listener>
      <listener-class>uk.ac.edukapp.listeners.ConnectionListener</listener-class> 
   </listener>
	
	<servlet>
		<description>Search servlet</description>
		<display-name>seach</display-name>
		<servlet-name>SearchServlet</servlet-name>
		<servlet-class>
			uk.ac.edukapp.servlets.SearchServlet
		</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>	
	<servlet-mapping>
		<servlet-name>SearchServlet</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<description>Similar servlet</description>
		<display-name>similar</display-name>
		<servlet-name>SimilarServlet</servlet-name>
		<servlet-class>
			uk.ac.edukapp.servlets.SimilarServlet
		</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>	
	<servlet-mapping>
		<servlet-name>SimilarServlet</servlet-name>
		<url-pattern>/similar</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<description>User account servlet</description>
		<display-name>user</display-name>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>
			uk.ac.edukapp.servlets.UserServlet
		</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>	
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<description>Login servlet</description>
		<display-name>login</display-name>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>
			uk.ac.edukapp.servlets.LoginServlet
		</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>	
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<description>Register operations servlet</description>
		<display-name>register</display-name>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>
			uk.ac.edukapp.servlets.RegisterServlet
		</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>	
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<description>Logout servlet - invalidates session -deletes cookies</description>
		<display-name>logout</display-name>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>
			uk.ac.edukapp.servlets.LogoutServlet
		</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>	
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
</web-app>
